<form action="/quizes/<%= quiz.id %>/answer" method="get">
    <p>Pregunta: <%= quiz.pregunta %></p>
    <p><input type="text" name="respuesta" placeholder="Respuesta">
        <input type="submit" value="Enviar"></p>
</form>
<p>
    <a href="/quizes/<%=quiz.id%>/comments/new">
        <button>Nuevo comentario</button>
    </a>
</p>
<p><strong>Comentarios:</strong></p>
<%for(index in quiz.Comment){%>
    <%if(quiz.Comment[index].publicado || session.user){%>
        <p>- <%= quiz.Comment[index].texto%> 
            <%if(session.user && !quiz.Comment[index].publicado){%>
                <form action="/quizes/<%quiz.id%>/comments/<%quiz.Comment[index].id%>/publish?_method=put" method="post">    
                    <button type="submit">Publicar</button>
                </form>
            <%}%>
        </p>
    <%}%
<%}%>